const usestyle = makeStyles( theme => ({
//create a class name it can be anything like toolbarname asdf or anythinf
ToolbarMargin:{
...theme.mixins.toolbar

}

}));



export default function Header(props) {

	//now use the class name and store it in variable
	const classes = usestyle()

	return(
		
<React.Fragment>
<AppBar color="secondary">

<Toolbar> <Typography variant="h3">Hello </Typography> </Toolbar>

</AppBar>
<div  className={classes.ToolbarMargin} />
</React.Fragment>

		)
		
	
}



